{
  "name": "airul",
  "version": "0.1.29",
  "description": "CLI tool for generating AI rules from project documentation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "airul": "dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && chmod +x dist/cli.js",
    "test": "npm run build && NODE_ENV=test jest",
    "test:watch": "npm run build && NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:cleanup": "rm -rf test/__test_outputs__",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "rules": "airul generate",
    "start": "ts-node src/cli.ts"
  },
  "keywords": [
    "ai",
    "rules",
    "documentation",
    "context",
    "windsurf",
    "cursor"
  ],
  "author": "Dmitry Kury (d@dkury.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitkury/airul.git"
  },
  "homepage": "https://github.com/mitkury/airul#readme",
  "bugs": {
    "url": "https://github.com/mitkury/airul/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "airul": "^0.1.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "cosmiconfig": "^9.0.0",
    "glob": "^10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "globals": {
      "TEST_DIST": true
    },
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  }
}
